@using Microsoft.AspNetCore.Mvc.Localization
@using Origam.Server
@model Origam.Server.Identity.Models.LoginTwoStepViewModel
@inject IHtmlLocalizer<SharedResources> SharedLocalizer

<div class="detailview-container">
    <div class="detailview-module with-title">
        <h2>@SharedLocalizer["TwoFactorAuthentication"]</h2>
        <div class="input-form">
            <form asp-action="LoginTwoStep" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReturnUrl" />
                <input type="hidden" asp-for="RememberMe" />

                <label>@SharedLocalizer["EnterAuthenticationCode"]</label>
                <div class="input-row">
                    <input asp-for="TwoFactorCode" autofocus />
                </div>
                <div class="input-row"> 
                    <button type="submit" id="loginButton" class="btn btn-default normal-size primary submit-link">
                        @SharedLocalizer["Login"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<partial name="_ValidationSummary" />