@using Microsoft.AspNetCore.Mvc.Localization
@using Origam.ServerCore.Resources
@inject IHtmlLocalizer<SharedResources> SharedLocalizer
@model Origam.ServerCore.IdentityServerGui.Account.ForgotPasswordViewModel
<div class="detailview-container">
    <div class="detailview-module with-title">
        <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal" role="form">
            <h2>@SharedLocalizer["ResetPassword"]</h2>
            <div class="input-form">
                <div class="input-row">
                    <label asp-for="Email" ></label>
                    <input asp-for="Email" class="form-control"/>
                </div>
                <div class="input-row">
                     <a class="btn normal-size primary submit-link" value="" href=# >@SharedLocalizer["Submit"]</a>
                </div>
            </div>
        </form>
    </div>
</div>

<partial name="_ValidationSummary"/>
        